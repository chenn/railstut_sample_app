<% provide(:title, @user.name) %>
<div class="profile">
  <div class="main">
    <h1>
      <%= gravatar_for @user %>
      <%= @user.name %>
    </h1>
  </div>
  <div class="sidebar round">
    <p><strong>Name</strong> <%= @user.name %></p>
    <p><strong>URL</strong> <%= link_to user_path(@user) %></p>
  </div>
</div>
<div class="clearfix"></div>
